@model LibraryCatalog.ViewModels.BooksViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Author Full Names</th>
            <th>
                Books
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <table style="border:none">
                    @foreach (var author in Model.BooksByAuthor)
                     {
                        @if (item.AuthorId == author.AuthorId)
                         {
                             <tr><td>@Html.DisplayFor(modelItem => author.Book.Title)</td></tr>
                         }
                     }
                </table>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AuthorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>
