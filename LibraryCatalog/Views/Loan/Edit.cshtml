@model LibraryCatalog.Models.BookLoan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookLoan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookLoanId" />
            <div class="form-group">
                <label asp-for="BookId" class="control-label">Book</label>
                <p class="form-control">@Model.BookId</p>
                <input type="hidden" asp-for="BookId" />
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Member</label>
                <p class="form-control">@Model.UserId</p>
                <input type="hidden" asp-for="UserId" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueDate" class="control-label">Issue Date</label>
                <p class="form-control">@Model.IssueDate</p>
                <input asp-for="IssueDate" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ReturnByDate" class="control-label">Return By Date</label>
                <p class="form-control">@Model.ReturnByDate</p>
                <input asp-for="ReturnByDate" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fine" /> @Html.DisplayNameFor(model => model.Fine)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" name="btnEdit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

